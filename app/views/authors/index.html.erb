<table class="table table-hover">
  <thead>
    <tr>
      <th>Authors</th>
      <th>References</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
    <tr>
      <td>
	<%= link_to author.name, author %>
      </td>
      <td>
	<%= author.books.length %>
	<div class="pull-right">
	  <%= link_to "Edit", edit_author_path(author), class: "btn btn-mini" %>
	  <%= link_to "Destroy", author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
	</div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Author', new_author_path, class: "btn btn-small btn-primary" %>
