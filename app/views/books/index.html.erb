<table class="table">
  <caption><h3>
      Listing Books
  </h3></caption>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Edition</th>
      <th>Isbn</th>
      <th>Year</th>
      <th>Actions</th>
    </tr>
  </thead>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book %></td>
    <td><%= book.publisher %></td>
    <td><%= book.edition %></td>
    <td><%= book.isbn %></td>
    <td><%= book.year %></td>
    <td>
      <%= link_to "Edit", edit_book_path(book), class: "btn btn-mini" %>
      <%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Book", new_book_path, class: "btn btn-small btn-primary" %>
