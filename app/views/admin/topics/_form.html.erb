<%= form_for [:admin, @course, @topic] do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <% if @legend %>
    <legend><%= @legend %></legend>
    <% end %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, class: "input-xxlarge", placeholder: "Topic Title" %>
    </div>
    <div class="field">
      <%= f.label :ct_status %>
      <%= f.select :ct_status, options_for_select([["CT1", "CT1"], ["CT2", "CT2"], ["Post CT", "Post CT"]]), {}, class: "input-xxlarge" %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 4, class: "input-xxlarge" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-primary btn-large" %>
      <%= link_to "Back", [:admin, @course], class: "btn btn-small" %>
    </div>
  </fieldset>
<% end %>
