<%= render 'form' %>

<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Add a course
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse">
      <div class="accordion-inner">

	<%= form_for([:admin, @course_list_item]) do |f| %>
	<div class="field">
	  <%= f.hidden_field :department_id, :value => @department.id %>

	  <%= f.label :course_id %>
	  <%= f.select(:course_id, options_for_select(@courses_array), {}, :size => 10, :multiple => "multiple") %>
	</div>
	<div class="actions">
	  <%= f.submit class: 'btn btn-primary', value: 'Add Course' %>
	  <%= link_to "New Course", new_admin_course_path, class: "btn" %>
	</div>
	<% end %>



      </div>
    </div>
  </div>
</div>

