<table class="table table-hover">
  <caption><h3>Listing Terms</h3></caption>
  <thead>
    <tr>
      <th>Course</th>
      <th>Academic year</th>
      <th>Semester</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  
  <tbody>
    <% @terms.each do |term| %>
    <tr>
      <td><%= link_to "#{term.course.subject_code} - #{term.course.name}", term, class: "btn btn-small btn-link" %></td>
      <td><%= "#{term.academic_year}-#{term.academic_year+1}" %></td>
      <td><%= term.semester %></td>
      <td><%= link_to 'Edit', edit_term_path(term), class: "btn btn-mini" %></td>
      <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Term', new_term_path, class: "btn btn-small btn-primary" %>
