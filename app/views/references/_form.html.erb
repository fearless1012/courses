<%= form_for(@reference) do |f| %>
  <% if @reference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reference.errors.count, "error") %> prohibited this reference from being saved:</h2>

      <ul>
      <% @reference.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><%= @legend %></legend>
    <div class="field">
      <%= f.label :course_reference_id %>
      <%= f.select :course_reference_id, options_for_select(@course_reference_array) %>
    </div>
    <div class="field">
      <%= f.label :topic_id %>
      <%= f.select :topic_id, options_for_select(@topics_array) %>
    </div>
    <div class="field">
      <%= f.label :sections %>
      <%= f.text_field :sections %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-small btn-primary" %>
      <%= link_to 'Back', references_path, class: "btn btn-small" %>
    </div>
  </fieldset>
<% end %>
