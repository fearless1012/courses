<table class="table table-hover">
  <caption><h3>Listing Courses</h3></caption>
  <thead>
    <tr>
      <th>Subject code</th>
      <th>Name</th>
      <th>Credits</th>
      <th>History</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.subject_code %></td>
      <td><%= link_to course.name, course, class: 'btn btn-small btn-link' %></td>
      <td><%= course.credits %></td>
      <td><%= course.terms.length %></td>
      <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-mini' %></td>
      <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Course', new_course_path, class: "btn btn-small btn-primary" %>
